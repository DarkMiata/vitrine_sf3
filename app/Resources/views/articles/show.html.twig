{% extends 'admin.html.twig' %}

{% block body %}
    <h1>Article</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ article.name }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ article.url }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ article.description }}</td>
            </tr>
            <tr>
                <th>Ref</th>
                <td>{{ article.ref }}</td>
            </tr>
            <tr>
                <th>Refsite</th>
                <td>{{ article.refsite }}</td>
            </tr>
            <tr>
                <th>Marque</th>
                <td>{{ article.marque }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ article.prix }}</td>
            </tr>
            <tr>
                <th>Categorieid</th>
                <td>{{ article.categorieId }}</td>
            </tr>
            <tr>
                <th>Catname</th>
                <td>{{ article.catName }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('articles_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('articles_edit', { 'id': article.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
