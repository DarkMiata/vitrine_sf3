{# pagination des pages de liste articles #}
<nav aria-label="Page navigation example">
  <ul class="pagination">
    <li class="page-item">
      <a class="page-link" href="{{ previousPathUrl }}" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
        <span class="sr-only">Previous</span>
      </a>
    </li>

    {# affichage des index de page #}
    {% for index in indexPage %}
      <li class="page-item"><a class="page-link" href="{{ pathUrlRoot }}/{{ index }}">
          {{ index }}</a></li>
    {% endfor %}  
      
    <li class="page-item">
      <a class="page-link" href="{{ nextPathUrl }}" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
        <span class="sr-only">Next</span>
      </a>
    </li>
  </ul>
</nav>